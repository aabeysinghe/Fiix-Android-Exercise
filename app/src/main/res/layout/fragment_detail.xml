<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnQADetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".javasample.DetailFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="50dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="#89B4CC"
        card_view:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/txtDetailQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/Questiontext"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="50dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="#89B4CC"
        card_view:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/txtDetailAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtDetailQuestion"
            android:layout_marginLeft="5dp"
            android:text="@string/Answertext"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF" />


    </android.support.v7.widget.CardView>
</LinearLayout>



